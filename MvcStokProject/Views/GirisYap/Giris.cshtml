<!DOCTYPE html>
<html lang="en">

<head>
    <title>Stok Giriş Sayfası</title>
    <!-- meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- /meta tags -->
    <!-- custom style sheet -->
    <link href="~/Content/Admin Page/css/style.css" rel="stylesheet" />
    <!-- /custom style sheet -->
    <!-- fontawesome css -->
    <link href="~/Content/Admin Page/css/fontawesome-all.css" rel="stylesheet" />
    <!-- /fontawesome css -->
    <!-- google fonts-->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- /google fonts-->

</head>


<body>
    <h1></h1>
    <div class=" w3l-login-form" style="margin-top:50px;">
        <h2>Yönetici Giriş Sayfası</h2>
        @using (Html.BeginForm("Giris", "GirisYap", FormMethod.Post))
        {
            <div class=" w3l-form-group">
                <label>Kullanıcı Adı:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" name="KULLANICI" class="form-control" placeholder="Kullanıcı adı giriniz." required="required" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Şifre:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" name="SIFRE" class="form-control" placeholder="Şifre giriniz." required="required" />
                </div>
            </div>
            <button type="submit">Giriş</button>
        }
    </div>

</body>

</html>
